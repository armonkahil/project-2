<!-- Login Modal Stuff-->
<div id="login-modal" class="modal">
    <form class="modal-content">
        <h1>Login</h1>
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <div>
            <button type="button" id="login-cancelbtn">Cancel</button>
            <button type="submit" id="login-signupbtn">Log In</button>
        </div>
    </form>
</div>

<!--Sign Up Modal Stuff-->
<div id="sign-up-modal" class="modal">
    <form class="signup modal-content">
        <div class="modal-header">
            <h1>
                Sign Up
            </h1>
        </div>
        <div>
            <label for="email"><b>Email</b></label>
            <input id="email-input" type="text" placeholder="Enter Email" name="email">
        </div>
        <div>
            <label for="psw"><b>Password</b></label>
            <input id="password-input" type="password" placeholder="Enter Password" name="psw">
        </div>
        <div>
            <label for="firstname"><b>First Name</b></label>
            <input id="first-name-input" type="text" placeholder="First Name" name="firstname">
        </div>
        <div class="modal-footer">
            <button type="button" id="cancelbtn">Cancel</button>
            <button type="submit" id="signupbtn">Sign Up</button>
        </div>
    </form>
</div>